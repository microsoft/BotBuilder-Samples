{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "number": {
            "type": "number"
        },
        "units": {
            "type": "string"
        }
    },
    "required": [
        "number",
        "units"
    ],
    "$template": "temperature",
    "$generator": {
        "allOf": [
            {
                "$units": {
                    "type": "string",
                    "enum": [
                        "F",
                        "K",
                        "R",
                        "D",
                        "C",
                        "Degree"
                    ],
                    "Title": "Units",
                    "Description": "Form dialogs will default to units and convert if possible."
                }
            },
            {
                "$ref": "array.json"
            }
        ]
    }
}