{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "number": {
            "type": "number"
        },
        "units": {
            "type": "string"
        }
    },
    "required": [
        "number",
        "units"
    ],
    "$template": "age",
    "$generator": {
        "title": "Age",
        "description": "Map entities like '14 years old' into a number and units.",
        "allOf": [
            {
                "$units": {
                    "type": "string",
                    "enum": [
                        "Year",
                        "Month",
                        "Week",
                        "Day"
                    ],
                    "title": "Units",
                    "description": "Expected age units."
                }
            },
            {
                "$ref": "minmax.json"
            },
            {
                "$ref": "common.json"
            }
        ]
    }
}