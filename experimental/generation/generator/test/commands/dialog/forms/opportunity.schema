{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "Account":{ 
            "type": "string",
            "$entities": ["utterance"]
        },
        "Topic": { 
            "type": "string",
            "$entities": ["utterance"]
        },
        "Territory": { 
            "type": "string",
            "$entities": ["utterance"]
        },
        "Description": { 
            "type": "string",
            "$entities": ["utterance"]
        },
        "ContactPhone": { 
            "type": "string", 
            "$entities": [ "utterance" ]
        },
        "ContactEmail": { 
            "type": "string", 
            "$entities": [ "email" ]
        },
        "EstimatedCloseDate": { 
            "type": "string",
            "$entities": [ "datetime" ]
        },
        "PurchaseTimeframe": { 
            "type": "string",
            "$entities": [ "datetime" ]
        },
        "Confirmation": {
            "type": "string",
            "enum": [
                "yes",
                "no"
            ],
            "$templates":[]
        }
    },
    "required":["Account", "Topic", "Territory","Description","ContactEmail","ContactPhone","EstimatedCloseDate","PurchaseTimeframe"],
    "$requires": [
        "standard.schema"
    ]
}
