{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LG",
	"patterns": [
		{"include": "#template_name_line"},
		{"include": "#comments"},
		{"include": "#imports"},
		{"include": "#template_body"},
		{"include": "#Structure_LG"}
	],
	"repository": {
		"comments": {
			"begin": "^\\s*>",
			"end":"\n",
			"name":"comment.line.keywords"
		},
		"imports": {
			"captures": {
				"1": {
					"name": "string.other.link.title.lg"
				},
				"2": {
					"name": "markup.underline.link.lg"
				}
			},
			"match": "\\[([\\w\\W]+?)\\]\\(([\\w\\W]+?)\\)",
			"name": "meta.link.reference.def.lg"
		},
		"fence_block": {
			"begin": "(`{3})\\s*",
			"end": "(`{3})\\s*$",
			"contentName": "constant.character.escape.multiline",
			"patterns": [
				{
					"include": "#expression"
				}]
		},
		"expression": {
			"contentName": "expression",
			"begin": "\\$\\{",
			"end": "\\}",
			"name":"entity.other",
			"patterns": [
				{
					"include": "#string"
				},
				{
					"include": "#number"
				},
				{
					"match": "([a-zA-Z0-9_]+\\s*)\\(",
					"captures": {
						"1": {
							"name":"support.function"
						}
					}
				},
				{
					"name":"variable.parameter",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"string": {
			"patterns": [{
				"match": "(\")[^\"]*(\")",
				"name": "string.quoted.double"
			},
			{
				"match": "(\\')[^\\']*(\\')",
				"name": "string.quoted.single"
			}
		]
		},
		"number": {
			"match": "-?[0-9]+(\\.[0-9]*)*",
			"name":"constant.numeric"
		},
		"inline_string": {
			"match": "(\").+?(\")",
			"name":"string.quoted.double.lg"
		},
		"keyword": {
			"name": "keyword.control.keyword",
			"match": "(?i)(IF|ELSE|SWITCH|CASE|DEFAULT|(ELSE\\s*IF))\\s*:"
		},
		"template_name_line":{
			"begin": "^\\s*#",
			"end":"\n",
			"name":"entity.other",
			"patterns": [{
				"match": "([a-zA-Z0-9_]+)(\\(.*\\))?",
				"captures": {
					"1": {
						"name":"markup.bold.templateName"
					},
					"2": {
						"patterns": [
							{
								"match": "[a-zA-Z_][a-zA-Z0-9_]*",
								"name":"variable.name"
							}
						]
					}

				}
			}]
		},
		"template_body": {
			"begin":"^\\s*-",
			"end":"\n",
			"patterns": [
				{"include": "#fence_block"},
				{"include": "#expression"},
				{"include": "#keyword"}
			]
		},
		"Structure_LG" : {
			"name" : "Structure_LG",
			"begin": "(?:^\\s*\\[\\s*)",
			"end": "(?:\\s*\\]\\s*\\n)",
			"patterns": [
				{"match":"\\s*[a-zA-Z0-9]+\\s*\\n",
				"name":"support.class"},
				{
				"match": "([a-zA-Z0-9_]+\\s*)=([^\\n]+)\\n",
				"name": "entity.name.expression",
				"captures": {
					"1": {
						"name":"support.class"
					},
					"2": {
						"patterns": [
							{"include": "#expression"}
						]
					}
				}
				}
			]
		}
	},
	"scopeName": "source.lg"
}