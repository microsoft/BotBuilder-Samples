{
  "type": "AdaptiveCard",
  "height": "stretch",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "size": "ExtraLarge",
              "weight": "Bolder",
              "text": "Contoso Cafe"
            },
            {
              "type": "TextBlock",
              "text": "Book a table",
              "wrap": true
            }
          ],
          "width": {
            "physicalSize": 2,
            "unit": 0
          }
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "horizontalAlignment": "Center",
              "url": "http://contosocafeontheweb.azurewebsites.net/assets/contoso_logo_black.png"
            }
          ],
          "width": {
            "physicalSize": 1,
            "unit": 0
          }
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Location:"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "placeholder": "Pick a location",
      "choices": [
        {
          "title": "Seattle",
          "value": "Seattle"
        },
        {
          "title": "Redmond",
          "value": "Redmond"
        },
        {
          "title": "Renton",
          "value": "Renton"
        },
        {
          "title": "Bellevue",
          "value": "Bellevue"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Event date:"
    },
    {
      "type": "Input.Date",
      "id": "date",
      "title": "Event date"
    },
    {
      "type": "TextBlock",
      "text": "Event time:"
    },
    {
      "type": "Input.Time",
      "id": "time",
      "title": "Event time"
    },
    {
      "type": "TextBlock",
      "text": "Party size:"
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "Pick number of guests...",
      "id": "partySize",
      "choices": [
        {
          "title": "1",
          "value": "1"
        },
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6+",
          "value": "6"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Book it",
      "data": {
        "intent": "Book_Table_Submit",
        "confirmationList": "yes"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Cancel",
      "data": {
        "intent": "Book_Table_Cancel",
        "confirmationList": "no"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}